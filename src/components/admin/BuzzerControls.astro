<section id="buzzer-section" class="admin-section mt-3" style="display: none;">
    <h3 class="glow">LULLABY GUESS CONTROLS</h3>
    <div class="mt-1">
        <label>Select Track:</label>
        <select id="audio-track-select" class="terminal-input w-full">
            <option value="">-- Select a track --</option>
        </select>
    </div>
    <div class="admin-controls mt-1">
        <button id="play-audio-btn" class="terminal-btn terminal-btn--primary">PLAY AUDIO</button>
        <button id="stop-audio-btn" class="terminal-btn">STOP AUDIO</button>
        <button id="reveal-audio-btn" class="terminal-btn">REVEAL ANSWER</button>
    </div>
    <div id="spotify-warning" class="admin-warning mt-1 hidden">
        Note: Spotify not connected. Manual play required.
    </div>
    <hr class="admin-divider">
    <p class="mt-1">Locked by: <span id="buzzer-locker" class="glow">---</span></p>
    <div class="admin-controls mt-1">
        <button id="buzzer-correct-full" class="terminal-btn admin-btn--success-dim">ARTIST+SONG +60</button>
        <button id="buzzer-correct-song" class="terminal-btn admin-btn--success">SONG ONLY +30</button>
        <button id="buzzer-wrong" class="terminal-btn admin-btn--danger">WRONG</button>
    </div>
</section>
