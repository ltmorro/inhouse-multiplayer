<div>
    <section id="lobby-section">
        <h3 class="glow">LOBBY SETTINGS</h3>
        <div class="admin-controls items-center mt-1">
            <button id="toggle-qr-btn" class="terminal-btn">SHOW QR CODE</button>
            <span id="qr-status" class="admin-hint">QR hidden</span>
        </div>
    </section>

    <section class="mt-3">
        <h3 class="glow">FAMILIES (TEAMS)</h3>
        <ul id="team-list" class="admin-list mt-1"></ul>
    </section>

    <section class="mt-3">
        <h3 class="glow">AWARD POINTS</h3>
        <div class="admin-controls items-center mt-1">
            <select id="point-team" class="terminal-input admin-input--auto"></select>
            <input type="number" id="point-amount" class="terminal-input admin-input--narrow" value="50">
            <button id="add-points-btn" class="terminal-btn terminal-btn--primary">ADD</button>
        </div>
    </section>
</div>
