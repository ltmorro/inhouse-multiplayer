<div>
    <section id="music-controller-section">
        <h3 class="glow">LULLABY DJ</h3>
        <p class="admin-hint mb-1">Background Music Control</p>

        <div id="spotify-status" class="admin-controls items-center mb-2">
            <span id="spotify-status-text" class="admin-hint">Checking Spotify...</span>
            <a id="spotify-login-btn" href="/spotify/login" class="terminal-btn hidden spotify-connect-btn">CONNECT</a>
        </div>

        <div class="admin-controls items-center">
            <button id="music-prev-btn" class="terminal-btn" title="Previous Track">⏮</button>
            <button id="music-toggle-btn" class="terminal-btn terminal-btn--primary" title="Play/Pause">⏯</button>
            <button id="music-next-btn" class="terminal-btn" title="Next Track">⏭</button>
        </div>
    </section>

    <section class="mt-3">
        <button id="reset-btn" class="terminal-btn admin-btn--danger w-full">
            ⚠️ FACTORY RESET SYSTEM
        </button>
    </section>
</div>

<style>
.spotify-connect-btn {
    padding: 0.3rem 0.8rem;
    font-size: 0.8rem;
}
</style>
