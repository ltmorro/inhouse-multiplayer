<section id="pictureguess-section" class="game-section" style="display: none;">
    <h2 class="section-title">Guess The Item</h2>
    <div class="mt-1">
        <label>Picture:</label>
        <select id="pictureguess-preset-select" class="terminal-input w-full">
            <option value="">-- Select item photo --</option>
        </select>
    </div>
    <div class="mt-1">
        <label>Or URL:</label>
        <input type="text" id="pictureguess-url-input" class="terminal-input" placeholder="/images/baby1.jpg">
    </div>
    <div class="mt-1">
        <label>Hint:</label>
        <input type="text" id="pictureguess-hint-input" class="terminal-input" placeholder="Hint...">
    </div>
    <div class="admin-controls items-center mt-1">
        <label>P#:</label>
        <input type="number" id="pictureguess-id" class="terminal-input admin-input--narrow" value="1">
        <button id="send-picture-btn" class="terminal-btn terminal-btn--primary">SEND TO SCREEN</button>
    </div>
    <h4 class="mt-2">GUESSES:</h4>
    <ul id="pictureguess-list" class="admin-list admin-list--scrollable mt-1"></ul>
    <div class="admin-controls mt-2">
        <input type="text" id="pictureguess-correct-answer" class="terminal-input" placeholder="CORRECT ANSWER">
        <button id="reveal-picture-btn" class="terminal-btn terminal-btn--primary">REVEAL</button>
    </div>
</section>
