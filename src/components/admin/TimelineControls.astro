<section id="timeline-section" class="admin-section mt-3" style="display: none;">
    <h3 class="glow">TIMELINE PUZZLE</h3>
    <input type="hidden" id="timeline-puzzle-id" value="1" />
    <div class="mt-1">
        <label>Puzzle Preset:</label>
        <select id="timeline-preset-select" class="terminal-input w-full">
            <option value="">-- Select --</option>
        </select>
    </div>
    <div class="mt-1">
        <label>Events (Correct Order):</label>
        <textarea id="timeline-items-input" class="terminal-input" rows="4" placeholder="Event 1
Event 2
Event 3"></textarea>
    </div>
    <div class="mt-2">
        <button id="send-timeline-btn" class="terminal-btn terminal-btn--primary">START PUZZLE</button>
        <button id="complete-timeline-btn" class="terminal-btn">COMPLETE & REVEAL</button>
    </div>
    <h4 class="mt-2">SUBMISSIONS:</h4>
    <ul id="timeline-submission-list" class="list-none mt-1"></ul>
</section>
