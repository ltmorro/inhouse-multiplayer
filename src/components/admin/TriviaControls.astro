<section id="trivia-section" class="game-section" style="display: none;">
    <h2 class="section-title">Parenting Trivia</h2>
    <div class="mt-1">
        <label>Pre-loaded Questions:</label>
        <select id="trivia-preset-select" class="terminal-input w-full">
            <option value="">-- Select a question --</option>
        </select>
    </div>
    <div class="mt-1">
        <label>Question:</label>
        <textarea id="trivia-question-input" class="terminal-input" rows="2" placeholder="Enter custom question..."></textarea>
    </div>
    <div class="admin-controls items-center mt-1">
        <label>Q#:</label>
        <input type="number" id="trivia-question-id" class="terminal-input admin-input--narrow" value="1">
        <button id="send-trivia-btn" class="terminal-btn terminal-btn--primary">SEND QUESTION</button>
    </div>
    <h4 class="mt-2">ANSWERS:</h4>
    <ul id="answer-list" class="admin-list admin-list--scrollable mt-1"></ul>
    <div class="admin-controls mt-2">
        <input type="text" id="correct-answer" class="terminal-input" placeholder="CORRECT ANSWER">
        <button id="reveal-btn" class="terminal-btn terminal-btn--primary">REVEAL</button>
    </div>
</section>
