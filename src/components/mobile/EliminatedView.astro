---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-eliminated">
    <div class="flex-grow flex-center flex-column text-center">
        <h1 style="color: var(--terminal-red); font-size: 3rem;">OFF DUTY</h1>
        <p class="mt-2" style="color: var(--terminal-red);">YOUR PARENTAL CLEARANCE HAS BEEN SUSPENDED</p>
        <p class="mt-1" style="color: var(--terminal-red); opacity: 0.7; font-size: 0.9rem;">[ DATA UNRECOVERABLE ]</p>
    </div>
</ViewContainer>
