---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-eliminated">
    <div class="frost-viewport">
        <header class="frost-header">
            <p class="frost-header__chapter">A Cold Turn</p>
            <h2 class="frost-header__title">Eliminated</h2>
        </header>

        <div class="frost-card frost-card--glow">
            <p class="frost-card__instruction" style="color: #ff8a80;">You've been frozen out!</p>
            <div class="frost-waiting__icon" style="opacity: 0.5;">‚ùÑ</div>
            <p class="frost-card__hint" style="margin-top: 1rem; opacity: 0.6;">
                Watch the big screen to see who wins...
            </p>
        </div>

        <div class="frost-actions">
            <p class="frost-status">Better luck next round!</p>
        </div>
    </div>
</ViewContainer>
