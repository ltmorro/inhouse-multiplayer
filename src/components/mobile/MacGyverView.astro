---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-macgyver">
    <div class="flex-grow flex-center flex-column text-center">
        <h2 class="glow">CHAPTER 1: THE BLIZZARD</h2>
        <p style="color: var(--terminal-amber); font-size: 0.9rem;">
            SURVIVE THE COLD
        </p>
        <p
            id="macgyver-message"
            class="mt-2"
            style="color: var(--terminal-amber);"
        >
            THE STORM IS CLOSING IN.
        </p>
        <div class="mt-3">
            <p style="color: var(--terminal-green-dim);">
                Gather supplies to stay warm.<br />Awaiting inspection...
            </p>
        </div>
    </div>
</ViewContainer>
