---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-minesweeper">
    <div class="flex-grow flex-center flex-column text-center">
        <h2 class="glow">CHAPTER 3: THIN ICE</h2>
        <p style="color: var(--terminal-amber); font-size: 0.9rem;">
            NAVIGATE CAREFULLY
        </p>
        <p id="minesweeper-message" class="mt-2">
            Cross the frozen lake. Do not crack the ice.
        </p>
    </div>
</ViewContainer>