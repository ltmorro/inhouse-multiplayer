---
import ViewContainer from '../shared/ViewContainer.astro';
import ChapterHeader from './storybook/ChapterHeader.astro';
---
<ViewContainer id="view-pictureguess">
    <div class="frost-viewport">
        <ChapterHeader
            chapter="Chapter 4: Through the Frosty Window"
            title="Peek-a-Boo Puzzle"
            narrator="Gaze through the frost... what do you see?"
        />

        <div class="frost-card frost-card--glow">
            <p class="frost-card__instruction">Look at the big screen!</p>
            <p id="pictureguess-hint" class="frost-card__hint">
                <!-- Hint text injected here -->
            </p>
        </div>

        <form id="pictureguess-form" class="frost-actions">
            <input
                type="text"
                id="pictureguess-answer"
                class="frost-input"
                placeholder="Your guess..."
                autocomplete="off"
                autocapitalize="off"
            >
            <button type="submit" id="pictureguess-submit" class="frost-btn frost-btn--enchanted">
                Submit Guess
            </button>
            <p id="pictureguess-status" class="frost-status"></p>
        </form>
    </div>
</ViewContainer>