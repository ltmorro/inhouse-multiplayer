---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-pixelperfect">
    <div class="frost-viewport">
        <header class="frost-header">
            <p class="frost-header__chapter">A Vision Clears</p>
            <h2 class="frost-header__title">What's That Item?</h2>
        </header>

        <div class="frost-card frost-card--glow">
            <p class="frost-card__instruction">The image is clearing up...</p>
            <button id="pixelperfect-buzzer-button" class="frost-buzzer frost-buzzer--active">
                <span id="pixelperfect-buzzer-text">Buzz In!</span>
            </button>
            <p id="pixelperfect-status" class="frost-status" style="margin-top: 1rem;"></p>
        </div>

        <div class="frost-actions">
            <!-- No input needed -->
        </div>
    </div>
</ViewContainer>
