---
import ViewContainer from '../shared/ViewContainer.astro';
import ChapterHeader from './storybook/ChapterHeader.astro';
---
<ViewContainer id="view-priceguess">
    <div class="frost-viewport">
        <ChapterHeader
            chapter="Chapter 5: Stocking the Burrow"
            title="The Price is Right"
            narrator="Guess the cost, but do not exceed the treasure's worth!"
        />

        <div class="frost-card frost-card--glow">
            <p class="frost-card__instruction">Closest without going over wins!</p>
            <p id="priceguess-hint" class="frost-card__hint">
                <!-- Hint text injected here -->
            </p>
        </div>

        <div class="frost-actions">
            <div class="frost-price">
                <span class="frost-price__symbol">$</span>
                <input
                    type="number"
                    id="priceguess-answer"
                    class="frost-price__input"
                    placeholder="0.00"
                    step="0.01"
                    min="0"
                    autocomplete="off"
                >
            </div>
            <button type="button" id="priceguess-submit" class="frost-btn frost-btn--enchanted">
                Submit Guess
            </button>
            <p id="priceguess-status" class="frost-status"></p>
        </div>
    </div>
</ViewContainer>