---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-register" active={true}>
    <div class="flex-grow flex-center flex-column">
        <div class="ascii-art glow">
   _   
  ( )  
   H   
  ( )  
        </div>
        <h2 class="glow mt-3">THE GUEST BOOK</h2>
        <p
            style="color: var(--terminal-amber); font-size: 0.9rem;"
            class="mt-1"
        >
            PLEASE SIGN THE GUESTBOOK
        </p>

        <div
            class="mt-3"
            style="display: flex; gap: 1rem; width: 100%; max-width: 400px;"
        >
            <button
                id="tab-create"
                class="terminal-btn terminal-btn--primary"
                style="flex: 1;"
                onclick="showCreateTab()"
            >
                NEW FAMILY
            </button>
            <button
                id="tab-join"
                class="terminal-btn"
                style="flex: 1;"
                onclick="showJoinTab()"
            >
                JOIN FAMILY
            </button>
        </div>

        <form
            id="create-form"
            class="mt-3"
            style="width: 100%; max-width: 400px;"
        >
            <input
                type="text"
                id="create-team-name"
                class="terminal-input"
                placeholder="FAMILY NAME"
                required
            />
            <input
                type="text"
                id="create-player-name"
                class="terminal-input mt-2"
                placeholder="YOUR NAME"
                required
            />
            <button
                type="submit"
                class="terminal-btn terminal-btn--primary mt-2"
                style="width: 100%;"
            >
                SIGN GUESTBOOK
            </button>
        </form>

        <form
            id="join-form"
            class="mt-3"
            style="width: 100%; max-width: 400px; display: none;"
        >
            <input
                type="text"
                id="join-code"
                class="terminal-input"
                placeholder="FAMILY CODE"
                maxlength="4"
                style="text-transform: uppercase; letter-spacing: 0.5em; text-align: center; font-size: 1.5rem;"
                required
            />
            <input
                type="text"
                id="join-player-name"
                class="terminal-input mt-2"
                placeholder="YOUR NAME"
                required
            />
            <button
                type="submit"
                class="terminal-btn terminal-btn--primary mt-2"
                style="width: 100%;"
            >
                JOIN FAMILY
            </button>
        </form>
        <p
            id="register-error"
            class="mt-2"
            style="color: var(--terminal-red); display: none;"
        >
        </p>
    </div>
</ViewContainer>
