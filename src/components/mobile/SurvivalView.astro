---
import ViewContainer from '../shared/ViewContainer.astro';
import ChapterHeader from './storybook/ChapterHeader.astro';
---
<ViewContainer id="view-survival">
    <div class="frost-viewport">
        <ChapterHeader
            chapter="Chapter 6: Wisdom of the Village"
            title="Parenting Pathways"
            narrator="It takes a village to raise a baby..."
        />

        <div class="frost-card frost-card--glow">
            <p class="frost-card__instruction">Choose your parenting path wisely!</p>
            <p id="survival-question" class="frost-card__question text-glow-baby-blue">
                Waiting for question...
            </p>
            <p id="survival-team-status" class="survival-team-status"></p>
        </div>

        <div class="frost-actions">
            <div class="frost-choices">
                <button type="button" id="survival-vote-a" class="frost-choice frost-choice--a">
                    <span id="survival-label-a">Option A</span>
                </button>
                <button type="button" id="survival-vote-b" class="frost-choice frost-choice--b">
                    <span id="survival-label-b">Option B</span>
                </button>
            </div>
            <p id="survival-status" class="frost-status"></p>
        </div>
    </div>
</ViewContainer>

<style>
.survival-team-status {
    font-weight: 600;
    margin-top: 0.75rem;
}

.survival-team-status.awarded {
    color: #66bb6a;
}

.survival-team-status.not-awarded {
    color: #ff8a80;
}
</style>
