---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-timer">
    <div class="frost-viewport">
        <header class="frost-header">
            <p class="frost-header__chapter">Chapter Two</p>
            <h2 class="frost-header__title">The Perfect Swaddle</h2>
        </header>

        <div class="frost-card frost-card--glow">
            <p id="timer-message" class="frost-card__instruction">Keep the cold out...</p>
            <div id="timer-display" class="frost-timer text-glow-baby-blue">03:00</div>
        </div>

        <div class="frost-actions">
            <div class="timer-progress timer-progress-container">
                <div id="timer-progress-bar" class="timer-progress__bar w-full"></div>
            </div>
        </div>
    </div>
</ViewContainer>