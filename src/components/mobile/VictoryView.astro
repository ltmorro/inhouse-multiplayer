---
import ViewContainer from '../shared/ViewContainer.astro';
import ChapterHeader from './storybook/ChapterHeader.astro';
import StoryPageFrame from './storybook/StoryPageFrame.astro';
import NarratorText from './storybook/NarratorText.astro';
---
<ViewContainer id="view-victory">
    <div class="frost-viewport">
        <ChapterHeader
            chapter="The Final Chapter"
            title="The End"
            narrator="And so the story ends..."
        />

        <StoryPageFrame withGlow={true}>
            <NarratorText>And They All Lived Happily Ever After</NarratorText>
            <div id="victory-message" class="victory-message reveal-glow"></div>
        </StoryPageFrame>

        <div class="frost-actions">
            <p class="frost-status frost-status--narrator">Thank you for celebrating with us.</p>
        </div>
    </div>
</ViewContainer>

<style>
.victory-message {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: #ffffff;
    margin-top: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.frost-status--narrator {
    font-family: var(--font-serif);
    font-style: italic;
    color: var(--narrator-gold, rgba(255, 229, 180, 0.8));
}
</style>
