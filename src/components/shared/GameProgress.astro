<div class="game-progress" id="game-progress">
    <div class="game-progress__round" id="progress-round">Chapter 1 of 7</div>
    <div class="game-progress__bar">
        <div class="game-progress__fill" id="progress-fill" style="width: 0%;"></div>
    </div>
</div>

<style>
.game-progress {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 100%);
    padding: 12px 20px 20px;
    display: none;
}
.game-progress.visible {
    display: block;
}
.game-progress__round {
    color: var(--baby-blue);
    font-family: --font-story,serif;
    font-size: 1.2rem;
    text-align: center;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 0 5px var(--baby-blue);
}
.game-progress__bar {
    height: 6px;
    background: rgba(0, 255, 0, 0.15);
    border: 1px solid var(--baby-blue);
    border-radius: 0;
    overflow: hidden;
    position: relative;
}
.game-progress__fill {
    height: 100%;
    background: var(--baby-blue);
    box-shadow: 0 0 10px var(--baby-blue), 0 0 20px var(--baby-blue-glow);
    transition: width 0.5s ease-out;
    position: relative;
}
.game-progress__fill::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 20px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3));
}
</style>
