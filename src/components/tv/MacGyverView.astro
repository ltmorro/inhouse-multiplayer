---
/**
 * MacGyverView.astro - Immersive TV display for creative survival challenges
 * Blizzard/storm narrative with mist effects
 * HUD elements handled by TVHud + MoonTimer
 */
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-macgyver">
    <!-- STAGE ONLY - HUD and atmosphere handled by layout -->
    <div class="tv-stage">
        <div class="stage-book stage-book--wide immersive-pane">
            <h1 class="stage-title fairy-title--glow animate-breathe">The Blizzard</h1>
            <p class="stage-subtitle">Chapter One</p>

            <div class="chapter-star mt-3">
                <span class="animate-twinkle">*</span>
            </div>

            <p id="macgyver-message" class="stage-question animate-breathe">
                The storm has trapped us inside...
            </p>
        </div>
    </div>
</ViewContainer>
