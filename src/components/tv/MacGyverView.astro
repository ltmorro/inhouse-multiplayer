---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-macgyver">
    <div class="tv-layout">
        <div class="tv-header">
            <h1 class="tv-title glow-strong">THE BLIZZARD</h1>
            <p class="tv-subtitle">CHAPTER 1</p>
        </div>
        <div class="tv-content">
            <div class="text-center">
                <p id="macgyver-message" class="tv-main-message glow-strong">THE STORM HAS TRAPPED US INSIDE.</p>
            </div>
        </div>
        <div class="tv-instructions">
            <div class="tv-instructions-box">
                <p class="instruction-title">KEEP THE COLD OUT</p>
                <p class="instruction-text">The power is out and the fire is dying. <strong>Create something warm using ONLY these salvaged materials!</strong> The host will judge your creation.</p>
            </div>
        </div>
        <div class="tv-footer">
            <div id="macgyver-scoreboard"></div>
        </div>
    </div>
</ViewContainer>
