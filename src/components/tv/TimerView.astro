---
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-timer">
    <!-- STAGE: Main Content -->
    <div class="tv-stage">
        <div class="stage-book stage-book--wide immersive-pane">
            <h1 class="stage-title fairy-title--glow animate-breathe">The Perfect Swaddle</h1>
            <p class="stage-subtitle">Chapter A Cozy Challenge</p>

            <p id="timer-message" class="stage-narrator animate-breathe mt-3">
                Wrap the baby before the draft gets in...
            </p>

            <div id="timer-display" class="tv-timer animate-float mt-3">
                03:00
            </div>

            <div class="timer-progress tv-progress mt-3">
                <div id="timer-progress-bar" class="timer-progress__bar w-full"></div>
            </div>
        </div>
    </div>
</ViewContainer>
