---
/**
 * TriviaView.astro - Immersive TV display for trivia games
 * HUD elements (timer, scores) are now handled by TVHud + MoonTimer
 * Atmosphere (moonbeams, frost) handled by TVLayout
 */
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-trivia">
    <!-- STAGE ONLY - HUD and atmosphere handled by layout -->
    <div class="tv-stage">
        <div class="stage-book stage-book--wide immersive-pane">
            <p class="stage-subtitle">Chapter 1: Whispers in the Woods</p>
            <h1 class="stage-title fairy-title--glow animate-breathe">Nursery Wisdom</h1>

            <div class="chapter-star mt-2 mb-2">
                <span class="animate-twinkle">*</span>
            </div>

            <p id="trivia-question" class="stage-question">
                Waiting for question...
            </p>

            <div id="trivia-submission-status" class="stage-narrator mt-2">
                <!-- "3/4 families submitted" -->
            </div>

            <!-- Answer Reveal - Enhanced with baby blue glow -->
            <div id="trivia-answer-reveal" class="mt-3 hidden">
                <div class="chapter-star">
                    <span class="animate-twinkle">*</span>
                </div>
                <p class="tv-label-text">The Answer:</p>
                <p id="trivia-answer-text" class="stage-reveal glow-baby-blue-intense animate-float"></p>
            </div>

            <!-- Team Answers - Ethereal scroll -->
            <div id="trivia-team-answers" class="tv-team-answers ethereal-scroll mt-3 hidden">
                <!-- Team answers table injected here -->
            </div>
        </div>
    </div>
</ViewContainer>