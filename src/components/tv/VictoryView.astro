---
/**
 * VictoryView.astro - Immersive TV display for game completion
 * Winner reveal uses dramatic baby blue glow pulse
 * HUD elements handled by TVHud
 */
import ViewContainer from '../shared/ViewContainer.astro';
---
<ViewContainer id="view-victory">
    <!-- STAGE ONLY - HUD and atmosphere handled by layout -->
    <div class="tv-stage">
        <div class="stage-book stage-book--wide immersive-pane">
            <p class="stage-subtitle">And They All Lived Happily Ever After</p>
            <h1 class="stage-title fairy-title--glow animate-breathe">The End</h1>

            <div class="chapter-star mt-3">
                <span class="animate-twinkle">*</span>
            </div>

            <p class="tv-label-text">The Winning Family</p>
            <p id="victory-winner" class="stage-reveal glow-baby-blue-intense animate-float winner-reveal"></p>

            <div class="tv-team-answers ethereal-scroll mt-3">
                <table class="scoreboard">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Family</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody id="final-scoreboard">
                        <!-- Final scores injected here -->
                    </tbody>
                </table>
            </div>

            <p class="stage-narrator mt-3">
                Thank you for celebrating with us. The story continues...
            </p>
        </div>
    </div>
</ViewContainer>
