---
/**
 * ScoreRibbon.astro
 * Drifting score display - appears during transitions and score changes
 *
 * New immersive behavior:
 * - Hidden during active gameplay
 * - Drifts in from bottom during state transitions
 * - Shows with sparkle when a team scores
 * - Uses baby blue (#4D87BF) accent glow
 */
---
<div
    id="score-ribbon"
    class="hud-element score-ribbon"
    data-show-states="TRIVIA,TIMELINE,PICTUREGUESS,BUZZER,TIMER,PIXELPERFECT,PRICEGUESS,SURVIVAL,VICTORY"
>
    <div class="score-ribbon__container">
        <div class="score-ribbon__teams" id="score-ribbon-teams">
            <!-- Populated by JavaScript -->
        </div>
    </div>
</div>

<style>
.score-ribbon {
    position: fixed;
    bottom: 40px;
    right: 40px;
    z-index: 80;
    pointer-events: none;
    opacity: 0;
    transform: translateY(60px);
    filter: blur(4px);
    transition: opacity 0.5s ease, transform 0.5s ease, filter 0.5s ease;
}

/* Visible state - used during transitions */
.score-ribbon.visible {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
}

/* Drifting animation for transitions */
.score-ribbon.drifting {
    animation: score-drift 5s ease-out forwards;
}

@keyframes score-drift {
    0% {
        opacity: 0;
        transform: translateY(80px);
        filter: blur(6px);
    }
    15% {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
    }
    75% {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
    }
    100% {
        opacity: 0;
        transform: translateY(-30px);
        filter: blur(4px);
    }
}

.score-ribbon__container {
    background: rgba(10, 22, 40, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(77, 135, 191, 0.3);
    border-radius: 16px;
    padding: 16px 24px;
    box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

.score-ribbon__teams {
    display: flex;
    flex-direction: column;
    gap: 8px;
    min-width: 200px;
}

/* Individual team row - set by JavaScript */
:global(.score-ribbon__team) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 12px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
}

/* Leading team highlight */
:global(.score-ribbon__team.leading) {
    background: rgba(77, 135, 191, 0.2);
    border: 1px solid rgba(77, 135, 191, 0.4);
}

:global(.score-ribbon__team-name) {
    font-family: var(--font-story, 'Cormorant Garamond', serif);
    font-size: 1.1rem;
    color: var(--ice-whisper, #E8F4FC);
    font-weight: 500;
}

:global(.score-ribbon__team-score) {
    font-family: var(--font-whimsy, 'Quicksand', sans-serif);
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    min-width: 40px;
    text-align: right;
}

/* Sparkle animation for when a team scores */
:global(.score-ribbon__team.sparkle) {
    animation: team-sparkle 0.8s ease-out;
}

@keyframes team-sparkle {
    0% {
        box-shadow: 0 0 0 rgba(77, 135, 191, 0);
        transform: scale(1);
    }
    30% {
        box-shadow:
            0 0 20px rgba(77, 135, 191, 0.6),
            0 0 40px rgba(77, 135, 191, 0.3);
        transform: scale(1.05);
    }
    100% {
        box-shadow: 0 0 0 rgba(77, 135, 191, 0);
        transform: scale(1);
    }
}

/* Score bump animation */
:global(.score-ribbon__team-score.bumping) {
    animation: score-bump 0.5s ease-out;
}

@keyframes score-bump {
    0% { transform: scale(1); }
    40% { transform: scale(1.3); color: var(--baby-blue, #4D87BF); }
    100% { transform: scale(1); }
}
</style>
