---
/**
 * TVHud.astro
 * Main HUD container - orchestrates all corner-anchored HUD elements
 * Replaces the traditional TVHeader with an immersive game experience
 *
 * Immersive "Frost Window" HUD:
 * - MoonTimer arcs across the top (replaces digital TimerOrb)
 * - TeamScoreboard centered at bottom with team boxes
 */
import MoonTimer from './MoonTimer.astro';
import TeamCountOrb from './TeamCountOrb.astro';
import TeamScoreboard from './TeamScoreboard.astro';
import StorybookFrame from './StorybookFrame.astro';
import FloatingNotes from './FloatingNotes.astro';
---

<div class="tv-hud" id="tv-hud">
    <!-- Moon Timer - arcs across the top of screen -->
    <MoonTimer />

    <!-- Decorative frame (lowest layer) -->
    <StorybookFrame />

    <!-- Floating notes (replaces news ticker) -->
    <FloatingNotes />

    <!--&lt;!&ndash; Top Left: Chapter/Game indicator &ndash;&gt;-->
    <!--<div class="tv-hud-corner tv-hud-corner&#45;&#45;top-left">-->
    <!--    <ChapterSeal />-->
    <!--</div>-->

    <!-- Top Right: Reserved for future elements (moon timer spans full width) -->
    <div class="tv-hud-corner tv-hud-corner--top-right">
        <!-- MoonTimer is now full-width at top, no corner timer needed -->
    </div>

    <!-- Bottom Left: Team count (lobby only) -->
    <div class="tv-hud-corner tv-hud-corner--bottom-left">
        <TeamCountOrb />
    </div>

    <!-- Bottom Center: Persistent Team Scoreboard -->
    <TeamScoreboard />
</div>

<style>
    .tv-hud {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 100;
    }
</style>
