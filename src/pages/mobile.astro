---
/**
 * src/pages/mobile.astro
 * Mobile Controller Page - Player's phone interface
 *
 * Uses MobileLayout which provides:
 * - Atmosphere (frost-bg, stars, moonbeams, snow)
 * - MobileHeader
 * - InteractionOverlay
 * - All required scripts
 *
 * This page only defines the game views (Stage content).
 */
import MobileLayout from "../layouts/MobileLayout.astro";

// Game Views Only - the Stage content
import RegisterView from "../components/mobile/RegisterView.astro";
import TeamCreatedView from "../components/mobile/TeamCreatedView.astro";
import LobbyView from "../components/mobile/LobbyView.astro";
import MacGyverView from "../components/mobile/MacGyverView.astro";
import TriviaView from "../components/mobile/TriviaView.astro";
import TimerView from "../components/mobile/TimerView.astro";
import MusicGuessingView from "../components/mobile/MusicGuessingView.astro";
import TimelineView from "../components/mobile/TimelineView.astro";
import MinesweeperView from "../components/mobile/MinesweeperView.astro";
import PictureGuessView from "../components/mobile/PictureGuessView.astro";
import PriceGuessView from "../components/mobile/PriceGuessView.astro";
import PixelPerfectView from "../components/mobile/PixelPerfectView.astro";
import SurvivalView from "../components/mobile/SurvivalView.astro";
import EliminatedView from "../components/mobile/EliminatedView.astro";
import VictoryView from "../components/mobile/VictoryView.astro";
import KickedView from "../components/mobile/KickedView.astro";
---

<MobileLayout>
    <!-- Registration & Lobby -->
    <RegisterView />
    <TeamCreatedView />
    <LobbyView />

    <!-- Game Views (in chapter order) -->
    <MacGyverView />
    <TriviaView />
    <TimerView />
    <MusicGuessingView />
    <TimelineView />
    <MinesweeperView />
    <PictureGuessView />
    <PriceGuessView />
    <PixelPerfectView />
    <SurvivalView />

    <!-- End States -->
    <EliminatedView />
    <VictoryView />
    <KickedView />
</MobileLayout>
